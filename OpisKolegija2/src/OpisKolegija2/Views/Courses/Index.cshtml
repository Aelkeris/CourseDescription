@model IEnumerable<OpisKolegija2.Models.CoursesViewModel>

@{
    ViewBag.Title = "Courses";
}
<h2>Courses</h2>
<p>
    <a asp-controller="Courses" asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>Naziv</th>
        <th>Profesor</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nazivPredmeta)  
            </td>
            <td>         
                @for (var i = 0; i < item.profesori.Count; i++)
                {
                    @if(i==(item.profesori.Count()-1))
                    {
                        string s2 = item.profesori.ElementAt(i);
                        @s2
                    }
                    else
                    {
                        string s = item.profesori.ElementAt(i) + ", ";
                        @s
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Obriši predmet","Delete","Courses",new { id = item.id })
            </td>
            <td>
                @Html.ActionLink("Više","Index","AllData",new { id = item.id })
            </td>
        </tr>
    }
</table>
















