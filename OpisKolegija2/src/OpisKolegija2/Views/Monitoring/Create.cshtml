@model OpisKolegija2.Models.Monitoring

@{
    ViewBag.Title = "Praćenje";
}

<h2>@ViewData["Praćenje"]</h2>

<form asp-controller="Monitoring" asp-action="Create" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>        
        <input asp-for="CourseId" value="@ViewData["id"]" readonly="readonly" hidden="hidden"/>
        <h1>2. Opis kolegija</h1>
        <hr />
        <p>2.1.	Praćenje rada studenata (upisati udio u ECTS bodovima za svaku aktivnost tako da ukupni broj ECTS bodova odgovara bodovnoj vrijednosti kolegija)</p>
        <hr />
        <!--Entry 1  -->
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="ClassAttendance" class="control-label">Pohađanje nastave:</label>
                            <input asp-for="ClassAttendance" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="ClassAttendance" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Entry 2  CourseStatus-->
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="ExperimentalWork" class="control-label">Experimentalni rad:</label>
                            <input asp-for="ExperimentalWork" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="ExperimentalWork" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Entry 3  Semester-->
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="Essay" class="control-label">Esej :</label>
                            <input asp-for="Essay" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="Essay" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Entry 4 Ects-->
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="ShortTest" class="control-label">Kolokviji :</label>
                            <input asp-for="ShortTest" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="ShortTest" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <!-- Entry 5 HoursLecture-->
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="ClassActivity" class="control-label">Aktivnost u nastavi :</label>
                            <input asp-for="ClassActivity" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="ClassActivity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="WrittenExam" class="control-label">Pisani ispit :</label>
                            <input asp-for="WrittenExam" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="WrittenExam" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="Research" class="control-label">Istraživanje :</label>
                            <input asp-for="Research" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="Research" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Entry 8 ShortName-->
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="Report" class="control-label">Referat :</label>
                            <input asp-for="Report" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="Report" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <!-- Entry 9 CourseCode-->
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="Seminar" class="control-label">Seminarski rad :</label>
                            <input asp-for="Seminar" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="Seminar" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Entry 10 Description-->
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="OralExam" class="control-label">Usmeni ispit :</label>
                            <input asp-for="OralExam" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="OralExam" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Entry 11 Prerequisites-->
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="Project" class="control-label">
                                Projekt :
                            </label>
                            <input asp-for="Project" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="Project" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Entry 12 LearningOutcomes-->
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="PracticalWork" class="control-label">Praktični rad :</label>
                            <input asp-for="PracticalWork" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="PracticalWork" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Entry 13 Comments-->
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="ContinuousAssessment" class="control-label">Kontinuirana provjera znanja :</label>
                            <input asp-for="ContinuousAssessment"  type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="ContinuousAssessment" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        <hr />
        <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Upiši" class="btn btn-lg" />
                </div>
            </div>
    </div>
</form>


