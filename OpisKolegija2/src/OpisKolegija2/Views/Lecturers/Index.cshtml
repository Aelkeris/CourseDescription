@model IEnumerable<OpisKolegija2.Models.Lecturers>

@{
    ViewBag.Title = "Lecturers";
}

<h2>Lecturers</h2>

<p>
    <a asp-controller="Lecturers" asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>Ime i Prezime</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lecturer)
            </td>
            <td>
                @Html.ActionLink("Obriši Profesora", "Delete", "Lecturers", new { idLecturer = item.LecturerId }, null)
            </td>
        </tr>
    }
</table>